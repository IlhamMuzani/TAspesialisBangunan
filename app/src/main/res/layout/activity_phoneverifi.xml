<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.pelanggan.register.RegisterPelangganActivity">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_7sdp">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_gravity="center"
                android:background="@drawable/send"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="OTP Verifications"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtotp1"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtotp2"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtotp3"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtotp4"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtotp5"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="1"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/edtotp6"
                    android:layout_width="@dimen/_34sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLength="1"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Belum mendapatkan code?"/>

            <TextView
                android:id="@+id/kirimulangverifi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/birucantik"
                android:layout_marginStart="@dimen/_3sdp"
                android:text="Kirim ulang"/>

            </LinearLayout>



            <Button
                android:id="@+id/btn_verifi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_7sdp"
                android:background="@drawable/bg_btn_lapisandongker"
                android:text="Kirim"
                android:textColor="@color/white"
                app:backgroundTint="@color/birucantik" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>