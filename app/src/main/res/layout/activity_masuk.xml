<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MasukActivity">


    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <RelativeLayout
            android:id="@+id/btnloginuserpelanggan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg_btn_lapisanbiru"
            >

<!--            <ImageView-->
<!--                android:layout_width="45dp"-->
<!--                android:layout_height="45dp"-->
<!--                android:layout_marginEnd="15dp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:src="@drawable/ic_baseline_keyboard_"-->
<!--                />-->

            <ImageView
                android:layout_marginTop="2dp"
                android:id="@+id/imvloginuser"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/profiluser"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/imvloginuser"
                android:text="Login Sebagai User"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/btnloginuserjasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg_btn_lapisanbiruungu"
            >

<!--            <ImageView-->
<!--                android:layout_width="45dp"-->
<!--                android:layout_height="45dp"-->
<!--                android:layout_marginEnd="15dp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:src="@drawable/ic_baseline_keyboard_kuning"-->
<!--                />-->

            <ImageView
                android:id="@+id/imvloginjasa"
                android:layout_marginTop="2dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/profil"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/imvloginjasa"
                android:text="Login Sebagai Jasa"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>