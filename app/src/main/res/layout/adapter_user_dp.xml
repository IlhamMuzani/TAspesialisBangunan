<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/crvPelanggan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/detailpengajuanpelanggan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvPengajuanDP"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:src="@drawable/img_no_image"
            app:riv_corner_radius="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/imvPengajuanDP"
            android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txv_StatusDp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/btn_norek"
                        android:text="Nama Toko"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/txvCategoriproduk2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/btn_jenisbank"
                        android:layout_marginTop="5dp"
                        android:text="Categori"
                        android:textColor="@color/black" />

<!--                    <TextView-->
<!--                        android:id="@+id/txvJenis"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_toEndOf="@+id/btn_jenisbank"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:text="Jenis Pembuatan"-->
<!--                        android:textColor="@color/black" />-->

                </LinearLayout>


            </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>