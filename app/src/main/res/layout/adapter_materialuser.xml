<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/crv_produkmaterial"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/bg_btn_lapisanbiru"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvImageprodukmat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/product"
            app:riv_corner_radius="10dp" />

        <TextView
            android:id="@+id/txvNameprodukmat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_toEndOf="@+id/imvImageprodukmat"
            android:text="Nama Toko"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvJenisprodukmat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txvNameprodukmat"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/imvImageprodukmat"
            android:text="Jenis Material" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/txvHargaprodukmat"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:text="Rp.0"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="70dp">

            <Button
                android:id="@+id/txvDetailprodukmat"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:backgroundTint="#7CD1B8"
                android:text="Details"
                android:textSize="8dp" />


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>