<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/crv_produkmap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="5dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvImagemap"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/product"
            app:riv_corner_radius="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            >


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imvImagemap"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvNamemap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_toEndOf="@+id/imvImagemap"
                android:text="Jenis Pembuatan"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:id="@+id/txvJenismap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutnama"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/imvImagemap"
            android:text="Jenis Pembuatan" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_toEndOf="@+id/imvImagemap"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/txvHargamap"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:text="Rp.0"
                android:textStyle="bold" />


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>